{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "arrow-body-style": "error",
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "arrow-spacing": [
      "error",
      {
        "after": true,
        "before": true
      }
    ],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "off"
    ],
    "no-console": [
      "warn"
    ],
    "no-dupe-keys": [
      "off"
    ],
    "no-undef": [
      "warn"
    ],
    "no-useless-constructor": "error",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "prefer-destructuring": [
      "error",
      {
        "AssignmentExpression": {
          "array": true,
          "object": true
        },
        "VariableDeclarator": {
          "array": true,
          "object": true
        }
      },
      {
        "enforceForRenamedProperties": false
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "react/destructuring-assignment": [
      "error",
      "always"
    ],
    "react/no-access-state-in-setstate": "error",
    "react/no-deprecated": [
      "warn"
    ],
    "react/prefer-es6-class": "error",
    "react/prefer-stateless-function": "error",
    "react/prop-types": "error",
    "react/sort-prop-types": "error",
    "react/style-prop-object": "error",
    "semi": [
      "error",
      "never"
    ]
  },
  "settings": {
    "pragma": "React",
    "version": "detect"
  }
}